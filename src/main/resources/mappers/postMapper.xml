<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sns.post.dao.PostDAO">
	<insert id="insertPost">
		INSERT INTO `post`
		(
			`userId`
			,`content`
			,`imagePath`
			,`createdAt`
			,`updatedAt`
		)
		VALUES
		(
			#{userId}
			,#{content}
			,#{imagePath}
			,NOW()
			,NOW()
		)
	</insert>
	<select id="selectPostList" resultType="com.sns.post.model.Post">
		SELECT
			`id`
			,`userId`
			,`content`
			,`imagePath`
			,`createdAt`
			,`updatedAt`
		FROM
			`post`
		ORDER BY `id` DESC
	</select>
	<select id="selectPostByPostIdAndUserId" parameterType="map" resultType="com.sns.post.model.Post">
		SELECT
			`id`
			,`userId`
			,`content`
			,`imagePath`
			,`createdAt`
			,`updatedAt`
		FROM
			`post`
		WHERE
			`userId` = #{userId}
			AND
			`id` = #{postId}
	</select>
	<delete id="deletePostByPostId" parameterType="int">
		DELETE
		FROM `post`
		WHERE
			`id` = #{id}
			AND `userId` = #{userId}
	</delete>
</mapper>